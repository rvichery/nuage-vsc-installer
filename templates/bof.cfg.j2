primary-image        cf1:/timos/cpm.tim
primary-config       cf1:/config.cfg
autonegotiate
duplex               full
speed                100
wait                 3
persist              off
console-speed        115200
address          {{ interfaces.mgmt.ip }}/{{ interfaces.mgmt.netmask_prefix }}
static-route     0.0.0.0/0 next-hop {{ interfaces.mgmt.gw }} 
primary-dns      {{ dns.servers[0] }}
{% if dns.servers[1] is defined %}
secondary-dns    {{ dns.servers[1] }}
{% endif %}
{% if dns.servers[2] is defined %}
tertiary-dns     {{ dns.servers[2] }}
{% endif %}
dns-domain       {{ dns.domain }}
